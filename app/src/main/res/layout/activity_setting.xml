<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom">

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="55dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="开启/关闭黑名单"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/slide_switch"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:theme="@style/MySwitchTheme"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="拦截所有400开头的号码"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/slide_switch2"
            android:clickable="false"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:theme="@style/MySwitchTheme"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="185dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="自定义拦截"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/slide_switch3"
            android:clickable="false"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:theme="@style/MySwitchTheme"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/self_line"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_black_phone_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入手机号前3位/固话前3-4位"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/btn_self_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定" />

        <Button
            android:id="@+id/btn_self_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/bottom"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_messges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/messges" />

        <Button
            android:id="@+id/btn_blnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blnum" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/add"/>

        <Button
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/record"/>

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/clip_setting"/>

    </LinearLayout>

</RelativeLayout>
